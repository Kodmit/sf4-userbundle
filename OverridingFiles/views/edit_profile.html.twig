{% extends 'base.html.twig' %}
{% block title %}Profile{% endblock %}
{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {{ message }}
        {% endfor %}
    {% endfor %}

    <div style="background-color: #000000; width: 90%; color: #ffffff; padding: 10px; margin: auto">
        <i>You can edit this file in</i>
        <pre style="color: yellowgreen">templates/bundles/KodmitUserBundle/edit_profile.html.twig</pre>
    </div>

    <h2>Edit my profile</h2>
    <p><a href="{{ path("kodmit_userbundle_profile") }}">Back on my profile</a></p>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Save</button>
    {{ form_end(form) }}

{% endblock %}